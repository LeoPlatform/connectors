{
	// Use IntelliSense to learn about possible attributes.
	// Hover to view descriptions of existing attributes.
	// For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "attach",
			"name": "Attach by Process ID",
			"processId": "${command:PickProcess}"
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Launch via NPM",
			"runtimeExecutable": "npm",
			"runtimeArgs": [
				"run",
				"debug"
			],
			"port": 9229,
			"cwd": "${fileDirname}",
			"autoAttachChildProcesses": true,
			"skipFiles": [
				"<node_internals>/**/*.js",
				"${workspaceFolder}/**/node_modules/**/*.js",
			]
		},
		{
			"type": "node",
			"request": "launch",
			"name": "Postgres Unit Tests",
			"program": "${workspaceFolder}/postgres/node_modules/mocha/bin/_mocha",
			"cwd": "${workspaceFolder}/postgres",
			"args": [
				"-u",
				"tdd",
				"--timeout",
				"999999",
				"--colors",
				"${workspaceFolder}/postgres/test/unit/**/*.test.js"
			],
			"internalConsoleOptions": "openOnSessionStart"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Common Unit Tests",
            "program": "${workspaceFolder}/common/node_modules/mocha/bin/_mocha",
            "cwd": "${workspaceFolder}/common",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/common/test/**/*.test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}
